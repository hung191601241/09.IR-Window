<Window x:Class="VisionInspection.RegionCreatMatrix"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisionInspection"
        mc:Ignorable="d"
        Title="RegionCreatMatrix" Height="400" Width="300">
    <Grid Background="#DDDDDD">
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"></RowDefinition>
            <RowDefinition Height="30"></RowDefinition>
        </Grid.RowDefinitions>

        <StackPanel Grid.Row="0" Background="#FFFFFF" Margin="10,10,10,10">
            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                <Label Width="100">Rows</Label>
                <xctk:IntegerUpDown Name="xctRow" IsEnabled="True" Foreground="White" Value="1" Minimum="0" Maximum="100" Background="#454343" Width="50" />
            </StackPanel>
            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                <Label Width="100">Row Pitch</Label>
                <xctk:IntegerUpDown Name="xctRowP" IsEnabled="True" Foreground="White"  Value="0" Minimum="0" Maximum="2000" Background="#454343" Width="50" />
            </StackPanel>
            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                <Label Width="100">Colums</Label>
                <xctk:IntegerUpDown Name="xctColum" IsEnabled="True" Foreground="White"  Value="1" Minimum="0" Maximum="100" Background="#454343" Width="50" />
            </StackPanel>
            <StackPanel Margin="0,5,0,0" Orientation="Horizontal">
                <Label Width="100">Colum Pitch</Label>
                <xctk:IntegerUpDown Name="xctColumP" IsEnabled="True" Foreground="White"  Value="0" Minimum="50" Maximum="2000" Background="#454343" Width="50" />
            </StackPanel>
        </StackPanel>
        <StackPanel Margin="0,0,10,0" HorizontalAlignment="Right" Grid.Row="1" Orientation="Horizontal">
            <Button Name="btnOK" BorderBrush="#003399" BorderThickness="1" Background="#EEEEEE" Width="50" Margin="5,5,5,5">OK</Button>
            <Button Name="btnCancle" BorderBrush="#003399" Background="#EEEEEE" Width="50" Margin="5,5,5,5">Cancle</Button>
        </StackPanel>
    </Grid>
</Window>
