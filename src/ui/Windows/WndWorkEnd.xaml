<Window x:Class="VisionInspection.WndWorkEnd"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisionInspection"
        mc:Ignorable="d"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Title="Manual End" Height="240" Width="600">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" Background="DarkBlue" Foreground="White" 
               HorizontalContentAlignment="Center" VerticalContentAlignment="Center"
               FontSize="32" FontWeight="Bold">Work End!</Label>
        
        <Label Grid.Row="1" HorizontalContentAlignment="Center" FontSize="20" FontWeight="Bold">Please start with a new jig</Label>
        
        <Button Grid.Row="2" Name="btOne" Padding="0,4,0,4" Width="200" Height="50">
            <StackPanel Orientation="Horizontal">
                <Image Source="Images/refresh.png" Stretch="Fill"/>
                <TextBlock VerticalAlignment="Center" Margin="10,0,0,0"
                           FontSize="20" FontWeight="Bold" Foreground="DodgerBlue">New Start</TextBlock>
            </StackPanel>
        </Button>
    </Grid>
</Window>
