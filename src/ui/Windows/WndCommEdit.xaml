<Window x:Class="VisionTools.ToolEdit.WndCommEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisionTools.ToolEdit"
        mc:Ignorable="d"
        Title="Edit Communication" WindowStyle="ToolWindow" 
        ResizeMode="NoResize" Height="420" Width="480">
    <Grid Background="#999999">
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition Height="40"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="80"/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.Resources>
            <Style TargetType="{x:Type Label}">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="VerticalContentAlignment" Value="Center"/>
            </Style>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
            <Style TargetType="{x:Type TextBox}">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Background" Value="#555555"/>
                <Setter Property="Foreground" Value="White"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="TextAlignment" Value="Left"/>
                <Setter Property="Padding" Value="0,3,0,3"/>
            </Style>
            <Style TargetType="{x:Type ComboBox}">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Width" Value="100"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="IsEditable" Value="False"/>
            </Style>
        </Grid.Resources>
        <Border Grid.Row="1" Grid.RowSpan="3" Margin="20,0,0,0" BorderBrush="Black" BorderThickness="0.5,0.5,0.5,0.5" Background="#CCCCCC">
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold">PLC</TextBlock>
        </Border>
        <Border Grid.Row="4" Grid.RowSpan="2" Margin="20,0,0,0" BorderBrush="Black" BorderThickness="0.5,0,0.5,0.5" Background="#CCCCCC">
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center">MES Vision</TextBlock>
        </Border>
        <Border Grid.Row="6" Grid.RowSpan="3" Margin="20,0,0,0" BorderBrush="Black" BorderThickness="0.5,0,0.5,0.5" Background="#CCCCCC">
            <TextBlock HorizontalAlignment="Center" FontWeight="Bold" TextWrapping="Wrap" TextAlignment="Center">JIG</TextBlock>
        </Border>
        <Border Grid.Row="1" Grid.Column="1" Margin="0,0,40,0" BorderBrush="Black" BorderThickness="0,0.5,0.5,0">
            <StackPanel Orientation="Horizontal" Background="#CCCCCC">
                <Label Width="120">Status PLC :</Label>
                <Label x:Name="lbConnect" Margin="10,5" Width="220" FontWeight="Bold" HorizontalContentAlignment="Center" Padding="0,0,0,3" Background="#333333" FontSize="15" Foreground="White">STATUS</Label>
            </StackPanel>
        </Border>
        <Border Grid.Row="2" Grid.Column="1" Margin="0,0,40,0" BorderBrush="Black" BorderThickness="0,0,0.5,0">
            <StackPanel Orientation="Horizontal" Background="#CCCCCC">
                <Label Width="120">Setting PLC :</Label>
                <Button x:Name="btnSettingCommPLC" Width="220" Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <Label  VerticalAlignment="Center" Padding="10,0,0,0">Setting Comm PLC</Label>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
        <Border Grid.Row="3" Grid.Column="1" Margin="0,0,40,0" BorderBrush="Black" BorderThickness="0,0,0.5,0.5">
            <StackPanel Orientation="Horizontal" Background="#CCCCCC">
                <Label Width="120">Select Protocol :</Label>
                <ComboBox Width="220" Margin="10,5" HorizontalContentAlignment="Left" VerticalContentAlignment="Center"  x:Name="cbSelectDeviceType" SelectedValuePath="Content">
                    <ComboBoxItem Tag="MCProtocolBinaryEthernet">Mitsubishi_MC_Protocol_Binary_TCP</ComboBoxItem>
                    <ComboBoxItem Tag="MCProtocolAsciiEthernet">Mitsubishi_RS422_SC09</ComboBoxItem>
                    <ComboBoxItem Tag="LSXGTServerTCP">LS_XGTServer_TCP</ComboBoxItem>
                    <ComboBoxItem Tag="LSModbusCOM">LS_XGTServer_COM</ComboBoxItem>
                </ComboBox>
            </StackPanel>
        </Border>
        <Border Grid.Row="4" Grid.Column="1" Margin="0,0,40,0" BorderBrush="Black" BorderThickness="0,0,0.5,0">
            <StackPanel Orientation="Horizontal" Background="#CCCCCC">
                <Label Width="120">Status MES VS :</Label>
                <Label x:Name="lbConnectVs" Margin="10,5" Width="220" FontWeight="Bold" HorizontalContentAlignment="Center" Padding="0,0,0,3" Background="#333333" FontSize="15" Foreground="White">STATUS</Label>
            </StackPanel>
        </Border>
        <Border Grid.Row="5" Grid.Column="1" Margin="0,0,40,0" BorderBrush="Black" BorderThickness="0,0,0.5,0.5">
            <StackPanel Orientation="Horizontal" Background="#CCCCCC">
                <Label Width="120">Setting MES VS :</Label>
                <Button x:Name="btnSettingCommVs" Width="220" Margin="10,5">
                    <StackPanel Orientation="Horizontal">
                        <Label  VerticalAlignment="Center" Padding="10,0,0,0">Setting Comm MES Vision</Label>
                    </StackPanel>
                </Button>
            </StackPanel>
        </Border>
        <Border Grid.Row="6" Grid.Column="1" Margin="0,0,40,0" BorderBrush="Black" BorderThickness="0,0,0.5,0">
            <StackPanel Orientation="Horizontal" Background="#CCCCCC">
                <Label Width="120">Product Posion :</Label>
                <ComboBox x:Name="cbxDevJob" Margin="10,5,2,5" Width="70" ItemsSource="{Binding DeviceCodes}" SelectedItem="{Binding SelectDevJob, Mode=TwoWay}"/>
                <TextBox x:Name="txtAddrJob" Margin="0,5" Width="150"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="7" Grid.Column="1" Margin="0,0,40,0" BorderBrush="Black" BorderThickness="0,0,0.5,0">
            <StackPanel Orientation="Horizontal" Background="#CCCCCC">
                <Label Width="120">Jig Posion :</Label>
                <ComboBox x:Name="cbxDevJigPos" Margin="10,5,2,5" Width="70" ItemsSource="{Binding DeviceCodes}" SelectedItem="{Binding SelectDevJigPos, Mode=TwoWay}"/>
                <TextBox x:Name="txtAddrJigPos" Margin="0,5" Width="150"/>
            </StackPanel>
        </Border>
        <Border Grid.Row="8" Grid.Column="1" Margin="0,0,40,0" BorderBrush="Black" BorderThickness="0,0,0.5,0.5">
            <StackPanel Orientation="Horizontal" Background="#CCCCCC">
                <Label Width="120">Jig Matrix :</Label>
                <TextBox x:Name="txtRows" Margin="10,5" Width="50" HorizontalContentAlignment="Center"/>
                <Label Width="20">X</Label>
                <TextBox x:Name="txtCols" Margin="10,5" Width="50" HorizontalContentAlignment="Center"/>
            </StackPanel>
        </Border>
       

        <DockPanel Grid.Row="9" Grid.Column="0" Grid.ColumnSpan="2" Margin="20,15, 40,15" HorizontalAlignment="Stretch">
            <Button x:Name="btnSave" Content="Save" Width="90" FontSize="15" Click="btnSave_Click"/>
            <Button x:Name="btnCancel" Content="Cancel" Width="90" FontSize="15" HorizontalAlignment="Right" Click="btnCancel_Click"/>
        </DockPanel>
    </Grid>
</Window>
