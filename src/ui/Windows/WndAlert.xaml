<Window x:Class="VisionInspection.WndAlert"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisionInspection"
        mc:Ignorable="d"
        WindowStyle="None"
        Background="#dddddd" BorderThickness="2" BorderBrush="#bbbbbb"
        WindowStartupLocation="CenterScreen" ResizeMode="NoResize"        
        Height="360" Width="800" ShowInTaskbar="False">
    <Grid Margin="5,0,5,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="30"></RowDefinition>
            <RowDefinition Height="3*"></RowDefinition>
            <RowDefinition Height="5*"></RowDefinition>
            <RowDefinition Height="2*"></RowDefinition>
        </Grid.RowDefinitions>

        <Label Grid.Row="0" FontSize="16" FontWeight="Bold" 
               Padding="0,0,0,0" Margin="0,0,0,0"
               VerticalContentAlignment="Center">Error Message</Label>

        <Grid Grid.Row="1">
            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="Background" Value="RoyalBlue"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Margin" Value="2,2,2,2"/>
                    <Setter Property="Padding" Value="0,0,0,0"/>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="IsReadOnly" Value="True"/>
                    <Setter Property="Foreground" Value="RoyalBlue"/>
                    <Setter Property="FontSize" Value="20"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>

                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="100"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Label Grid.Row="0" Grid.Column="0">Time</Label>
            <Label Grid.Row="1" Grid.Column="0">Code</Label>
            <Label Grid.Row="2" Grid.Column="0">SEQID</Label>

            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtTime"
                     Background="Black" Foreground="Green">time</TextBox>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtCode">12345</TextBox>

            <Grid Grid.Row="2" Grid.Column="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="100"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <TextBox Grid.Column="0" x:Name="txtSeqId">11</TextBox>

                <Label Grid.Column="1">Mode</Label>
                <TextBox Grid.Column="2" x:Name="txtMode">AUTO</TextBox>
            </Grid>
        </Grid>

        <Grid Grid.Row="2">
            <Grid.Resources>
                <Style TargetType="Label">
                    <Setter Property="Background" Value="RoyalBlue"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="FontWeight" Value="Bold"/>
                    <Setter Property="HorizontalContentAlignment" Value="Center"/>
                    <Setter Property="VerticalContentAlignment" Value="Center"/>
                    <Setter Property="Margin" Value="2,2,2,2"/>
                    <Setter Property="Padding" Value="0,0,0,0"/>
                </Style>
                <Style TargetType="TextBox">
                    <Setter Property="IsReadOnly" Value="True"/>
                    <Setter Property="Background" Value="Black"/>
                    <Setter Property="Foreground" Value="White"/>
                    <Setter Property="FontSize" Value="16"/>
                    <Setter Property="HorizontalContentAlignment" Value="Left"/>
                    <Setter Property="VerticalContentAlignment" Value="Top"/>
                    <Setter Property="TextWrapping" Value="Wrap"/>
                </Style>
            </Grid.Resources>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="150"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="2*"/>
                <RowDefinition Height="3*"/>
            </Grid.RowDefinitions>

            <Label Grid.Row="0" Grid.Column="0" Background="Brown">Message</Label>
            <Label Grid.Row="1" Grid.Column="0">Solution</Label>

            <TextBox Grid.Row="0" Grid.Column="1" x:Name="txtMessage" Foreground="Yellow">message</TextBox>
            <TextBox Grid.Row="1" Grid.Column="1" x:Name="txtSolution">solution</TextBox>
        </Grid>

        <Border Grid.Row="3">
            <Button Name="btOk" FontSize="32"
                    Margin="5,8,5,8" Background="#cccccc"
                    HorizontalAlignment="Center" VerticalAlignment="Center" Width="200" Height="60">CLOSE
            </Button>
        </Border>

    </Grid>
</Window>
