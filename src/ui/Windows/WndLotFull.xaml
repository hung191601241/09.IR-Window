<Window x:Class="VisionInspection.WndLotFull"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisionInspection"
        mc:Ignorable="d"
         ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Title="Message" Height="360" Width="700">
    <Border BorderBrush="#cccccc" BorderThickness="1" Margin="2,2,2,2">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="1.4*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>
        
            <Label Grid.Row="0" Name="lblMessage" Foreground="Red" FontSize="20"
                   HorizontalContentAlignment="Left" VerticalContentAlignment="Top">message</Label>

            <Grid Grid.Row="1" x:Name="gridButtonContainer" Background="SkyBlue">
                <Grid.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource mButton}">
                        <Setter Property="FontSize" Value="24"/>
                        <Setter Property="FontWeight" Value="Bold"/>
                        <Setter Property="Margin" Value="5,5,5,5"/>
                    </Style>
                </Grid.Resources>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="btYes" Grid.Column="0">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.2*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="continue.png"/>
                        <TextBlock Grid.Row="1">Continue</TextBlock>
                    </Grid>
                </Button>
                <Button x:Name="btNo" Grid.Column="1">
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.2*"/>
                            <RowDefinition Height="1*"/>
                        </Grid.RowDefinitions>
                        <Image Grid.Row="0" Source="test-end.png"/>
                        <TextBlock Grid.Row="1">Test End</TextBlock>
                    </Grid>
                </Button>
            </Grid>

            <StackPanel Grid.Row="2" Orientation="Horizontal">
                <StackPanel.Resources>
                    <Style TargetType="Label">
                        <Setter Property="Padding" Value="0,0,0,0"/>
                        <Setter Property="Margin" Value="2,0,2,0"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                    <Style TargetType="TextBlock">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="Margin" Value="2,0,2,0"/>
                    </Style>                    
                </StackPanel.Resources>                
                <Label Grid.Column="0">Code:</Label>
                <TextBlock Grid.Column="1" x:Name="tvCode">31168</TextBlock>
                <Label Grid.Column="2" Margin="10,0,2,0">SEQID:</Label>
                <TextBlock Grid.Column="3" x:Name="tvSeqId">0234</TextBlock>
                <Label Grid.Column="4" Margin="10,0,2,0">Mode:</Label>
                <TextBlock Grid.Column="5" x:Name="tvMode">AUTO</TextBlock>
                <Label Grid.Column="6" Margin="10,0,2,0">Time:</Label>
                <TextBlock Grid.Column="7" x:Name="tvTime"></TextBlock>
            </StackPanel>
        </Grid>
    </Border>
</Window>
