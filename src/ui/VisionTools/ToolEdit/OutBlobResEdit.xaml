<local:GridBase x:Class="VisionTools.ToolEdit.OutBlobResEdit"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:VisionTools.ToolEdit" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
      mc:Ignorable="d"
             d:DesignHeight="600" d:DesignWidth="500" Background="#FF8A8A8A">
    <TabControl Background="White">
        <TabControl.ItemContainerStyle>
            <Style TargetType="TabItem">
                <Setter Property="Height" Value="25"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </TabControl.ItemContainerStyle>
        <TabControl.Resources>
            <Style TargetType="{x:Type Label}">
                <Setter Property="FontSize" Value="15"/>
            </Style>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="TextAlignment" Value="Center"/>
            </Style>
            <Style TargetType="{x:Type ComboBox}">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Width" Value="100"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="IsEditable" Value="False"/>
            </Style>
            <Style TargetType="{x:Type Path}">
                <Setter Property="Height" Value="15"/>
                <Setter Property="Width" Value="15"/>
                <Setter Property="Fill" Value="Black"/>
                <Setter Property="Stretch" Value="Uniform"/>
            </Style>
        </TabControl.Resources>
        <TabItem >
            <TabItem.Header>
                <TextBlock FontSize="15" Background="Transparent" Text="Blob"></TextBlock>
            </TabItem.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="200"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Grid.Row="0" Background="#FF8A8A8A" >
                    <Label Content="Blobs Input" FontSize="15" FontWeight="Bold" Foreground="White" Margin="15,3" Padding="0,2,0,0"/>
                </Grid>
                <DataGrid Grid.Row="1"
                      ItemsSource="{Binding Blobs}"
                      AutoGenerateColumns="False"
                      IsReadOnly="True"
                      HeadersVisibility="Column"
                      CanUserAddRows="False"
                      Margin="0">
                    <DataGrid.Columns>
                        <DataGridTextColumn Header="ID" Binding="{Binding Label}" Width="60"/>
                        <DataGridTextColumn Header="Area" Binding="{Binding Area}" Width="80"/>
                        <DataGridTextColumn Header="Centroid X" Binding="{Binding CenterMassX}" Width="120"/>
                        <DataGridTextColumn Header="Centroid Y" Binding="{Binding CenterMassY}" Width="120"/>
                        <DataGridTextColumn Header="Angle" Binding="{Binding Angle}" Width="80"/>
                        <DataGridTextColumn Header="Rect Size" Binding="{Binding RectSize}" Width="100"/>
                        <DataGridTextColumn Header="Rect Width" Binding="{Binding RectWidth}" Width="100"/>
                        <DataGridTextColumn Header="Rect Height" Binding="{Binding RectHeight}" Width="100"/>
                    </DataGrid.Columns>
                </DataGrid>
                <Grid Grid.Row="2" Background="#FF8A8A8A" >
                    <Label Content="Setting Distance" FontSize="15" FontWeight="Bold" Foreground="White" Margin="15,3" Padding="0,2,0,0"/>
                </Grid>
                <Border Grid.Row="3" BorderBrush="#FF8A8A8A" BorderThickness="0.5">
                    <StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="15,10,0,10" Grid.ColumnSpan="2">
                            <Label Content="Distance Setting :" Padding="0" Margin="2,2,4,2" VerticalAlignment="Center"/>
                            <xctk:DoubleUpDown Width="100" Margin="5,0,0,0" FontSize="15" HorizontalAlignment="Left" IsEnabled="True" Value="{Binding DistSet, Mode=TwoWay}" Minimum="0.00" Maximum="100000.0" Increment="0.01" HorizontalContentAlignment="Left"/>

                        </StackPanel>
                        <StackPanel Orientation="Horizontal" Margin="15,10,0,10" Grid.ColumnSpan="2">
                            <Label Content="Distance Real :" Padding="0" Margin="2,2,4,2" VerticalAlignment="Center"/>
                            <TextBox Width="100" Margin="24,0,0,0" FontSize="15" HorizontalAlignment="Left" IsEnabled="False" Text="{Binding DistReal, Mode=OneWay}" HorizontalContentAlignment="Left"/>
                        </StackPanel>
                    </StackPanel>
                </Border>
            </Grid>
        </TabItem>
        <TabItem>
            <TabItem.Header>
                <TextBlock FontSize="15" Background="Transparent" Text="Setting Address Output"></TextBlock>
            </TabItem.Header>
            <Grid Background="#999999" VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
                <Grid.RowDefinitions>
                    <RowDefinition Height="15"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="40"/>
                    <RowDefinition Height="150"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid.Resources>
                    <Style TargetType="{x:Type Label}">
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="VerticalContentAlignment" Value="Center"/>
                    </Style>
                    <Style TargetType="{x:Type TextBox}">
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="Background" Value="#555555"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Setter Property="HorizontalAlignment" Value="Center"/>
                        <Setter Property="TextAlignment" Value="Left"/>
                    </Style>
                    <Style TargetType="{x:Type ComboBox}">
                        <Setter Property="FontSize" Value="15"/>
                        <Setter Property="Width" Value="100"/>
                        <Setter Property="HorizontalAlignment" Value="Right"/>
                        <Setter Property="IsEditable" Value="False"/>
                    </Style>
                </Grid.Resources>
                <StackPanel Grid.Row="1" Orientation="Horizontal" Background="#CCCCCC" Margin="20,0,15,0">
                    <Label Width="65">OK :</Label>
                    <ComboBox Width="70" ItemsSource="{Binding DeviceCodes}" SelectedItem="{Binding SelectDevOutOK, Mode=TwoWay}" Margin="0,5,0,5"/>
                    <TextBox x:Name="txtAddrOutOK" Width="150" Margin="0,5,0,5"  Padding="3"/>
                </StackPanel>
                <StackPanel Grid.Row="2" Orientation="Horizontal" Background="#CCCCCC" Margin="20,0,15,0">
                    <Label Width="65">NG:</Label>
                    <ComboBox Width="70" ItemsSource="{Binding DeviceCodes}" SelectedItem="{Binding SelectDevOutNG, Mode=TwoWay}" Margin="0,5,0,5"/>
                    <TextBox x:Name="txtAddrOutNG" Width="150" Margin="0,5,0,5"  Padding="3"/>
                </StackPanel>
                <DataGrid Grid.Row="3" ItemsSource="{Binding DataView, Mode=TwoWay}" FontSize="15" Margin="15,10,10,0" AutoGenerateColumns="True" CanUserAddRows="False" HeadersVisibility="All" VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto">

                </DataGrid>
            </Grid>
        </TabItem>
    </TabControl>
</local:GridBase>
