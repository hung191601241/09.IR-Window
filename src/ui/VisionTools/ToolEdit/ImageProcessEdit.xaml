<local:GridBase x:Class="VisionTools.ToolEdit.ImageProcessEdit"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:VisionTools.ToolEdit" xmlns:xctk="http://schemas.xceed.com/wpf/xaml/toolkit"
             mc:Ignorable="d" 
             d:DesignHeight="600" d:DesignWidth="500">
    <TabControl Background="White">
        <TabControl.ItemContainerStyle>
            <Style TargetType="TabItem">
                <Setter Property="Height" Value="25"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="VerticalAlignment" Value="Center"/>
            </Style>
        </TabControl.ItemContainerStyle>
        <TabControl.Resources>
            <Style TargetType="{x:Type Label}">
                <Setter Property="FontSize" Value="15"/>
            </Style>
            <Style TargetType="{x:Type TextBlock}">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="TextWrapping" Value="Wrap"/>
                <Setter Property="HorizontalAlignment" Value="Center"/>
                <Setter Property="TextAlignment" Value="Center"/>
            </Style>
            <Style TargetType="{x:Type ComboBox}">
                <Setter Property="FontSize" Value="15"/>
                <Setter Property="Width" Value="100"/>
                <Setter Property="HorizontalAlignment" Value="Right"/>
                <Setter Property="IsEditable" Value="False"/>
            </Style>
            <Style TargetType="{x:Type Path}">
                <Setter Property="Height" Value="15"/>
                <Setter Property="Width" Value="15"/>
                <Setter Property="Fill" Value="White"/>
                <Setter Property="Stretch" Value="Uniform"/>
            </Style>
            <Style TargetType="{x:Type Button}">
                <Setter Property="Background" Value="#555555"/>
                <Setter Property="Foreground" Value="White"/>
            </Style>
            <Style TargetType="{x:Type Thumb}">
                <Setter Property="Width" Value="20"/>
                <Setter Property="Height" Value="40"/>
            </Style>
        </TabControl.Resources>
        <TabItem>
            <TabItem.Header>
                <TextBlock FontSize="15" Background="Transparent" Text="Setting"></TextBlock>
            </TabItem.Header>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="75"/>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="120"/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                <Grid Background="#FF8A8A8A" >
                    <Label Content="Image Process Mode" FontSize="15" FontWeight="Bold" Foreground="White" Margin="15,3" Padding="0"/>
                </Grid>
                <Border Grid.Row="1" BorderBrush="#FF8A8A8A" BorderThickness="1">
                    <StackPanel Orientation="Horizontal" Margin="0,20,0,25" HorizontalAlignment="Center">
                        <Label Content="Select Mode :" Margin="0,0,10,0"/>
                        <ComboBox Width="280" ItemsSource="{Binding ImageProcessModes}" SelectedItem="{Binding SelectedImageProcessMode, Mode=TwoWay}" HorizontalContentAlignment="Left"/>
                    </StackPanel>
                </Border>
                <Grid Grid.Row="2" Background="#FF8A8A8A">
                    <Label Content="Setting" FontSize="15" FontWeight="Bold" Foreground="White" Margin="15,3" Padding="0"/>
                </Grid>
                <Border Grid.Row="3" BorderBrush="#FF8A8A8A" BorderThickness="1">
                    <Grid HorizontalAlignment="Center">
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <StackPanel Orientation="Horizontal"  Margin="3,0,0,0" VerticalAlignment="Center">
                            <Label Content="Threshold Mode :" Margin="0,0,10,0"/>
                            <ComboBox Width="200" ItemsSource="{Binding ThresholdModes}" SelectedItem="{Binding SelectedThresholdMode, Mode=TwoWay}" HorizontalContentAlignment="Left"/>
                        </StackPanel>
                        <StackPanel Grid.Row="1" HorizontalAlignment="Center"  Height="Auto" Width="Auto" Orientation="Horizontal">
                            <Label HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Width="80">Threshold</Label>
                            <Slider Value="{Binding ThresholdValue, Mode=TwoWay}" Minimum="0" Maximum="255" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" VerticalAlignment="Center" Width="270"></Slider>
                            <xctk:IntegerUpDown Value="{Binding ThresholdValue, Mode=TwoWay}" FontSize="15" Height="25" Minimum="0" Maximum="255" Width="80" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"/>
                        </StackPanel>
                    </Grid>
                </Border>
            </Grid>
        </TabItem>
    </TabControl>
</local:GridBase>
