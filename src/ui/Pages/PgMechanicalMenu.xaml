<Page x:Class="AutoLaserCuttingInput.PgMechanicalMenu"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AutoLaserCuttingInput"
      mc:Ignorable="d" 
       d:DesignHeight="790" d:DesignWidth="1300"
      Title="PgMechanicalMenu">

    <Grid Background="White">
        <Grid.ColumnDefinitions>
            <ColumnDefinition></ColumnDefinition>
            <ColumnDefinition Width="200"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid Grid.Column="1">
            <Grid.Resources>

                <Style TargetType="{x:Type Label}">
                    <Setter Property="Foreground" Value="#dd222222" />
                    <Setter Property="Padding" Value="5,0" />
                    <Setter Property="VerticalContentAlignment" Value="Center" />
                    <Setter Property="HorizontalContentAlignment" Value="Center" />
                    <Setter Property="FontSize" Value="24" />
                </Style>
                <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                    <Setter Property="FontSize" Value="24" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Margin" Value="0,5,5,5" />
                    <Setter Property="Background" Value="White" />
                    <Setter Property="BorderThickness" Value="0"/>

                </Style>
                <Style TargetType="{x:Type TextBlock}">
                    <Setter Property="VerticalAlignment" Value="Center"/>
                    <Setter Property="FontSize" Value="22" />
                    <Setter Property="FontWeight" Value="Bold" />
                    <Setter Property="Foreground" Value="Black"/>

                </Style>

            </Grid.Resources>
            <Border>
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#6787c0" Offset="0"/>
                        <GradientStop Color="#879ec8" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>

                <Grid>
                    <Canvas>
                        <Polygon Points="0,20,130,80,0,170" Fill="#879ec8"/>
                        <Polygon Points="100,400,200,370,180,470" Fill="#879ec8"/>
                        <Ellipse Margin="250 450 0 0" Width="40" Height="40" Fill="#879ec8"/>
                        <Ellipse Margin="50 400 0 0" Width="40" Height="40" Fill="#879ec8"/>

                    </Canvas>
                    <StackPanel VerticalAlignment="Bottom">
                        <TextBlock Text="ITM" Style="{StaticResource titleText}"/>
                        <TextBlock Text="Semiconductor" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0" FontWeight="Bold"/>
                        <TextBlock Text="AUTOMATION TEAM" Style="{StaticResource normalText}" Opacity="0.8" Margin=" 20 0"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" >
                        <Label  FontWeight="Bold" Padding="0 20 0 0" Foreground="White" FontSize="27" HorizontalAlignment="Center">
                            <Label.Effect>
                                <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                            </Label.Effect> System Menu
                        </Label>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" HorizontalAlignment="Center" Margin="0 100 0 0" >


                        <Button x:Name="btSetting1" Background="LightGreen" Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">
                                
                               
                                <TextBlock Text="PLC"  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btSetting2"  Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">
                               
                                <TextBlock Text="Barcode 1"  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>


                        <Button x:Name="btSetting3" Height="60" Width="215" Style="{StaticResource sButton}" Margin="0 5 5 5" BorderThickness="0" >
                            <StackPanel Orientation="Horizontal">

                               

                                <TextBlock  Text="Barcode 2" Foreground="Black" Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>

                        <Button x:Name="btSetting4" Height="60" Width="215" >
                            <StackPanel Orientation="Horizontal">

                                <TextBlock Padding="10" Text="Setup MES"  Margin="10" VerticalAlignment="Center"/>
                            </StackPanel>
                        </Button>
                        
                    </StackPanel>
                </Grid>
            </Border>
        </Grid>
        <Grid Grid.Column="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="60"></RowDefinition>
                <RowDefinition></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition></ColumnDefinition>
                    <ColumnDefinition Width="160"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.Resources>
                    <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                        <Setter Property="FontSize" Value="24" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Margin" Value="0,5,5,5" />
                        <Setter Property="Background" Value="#6787c0" />
                        <Setter Property="BorderThickness" Value="0.7"/>
                        <Setter Property="BorderBrush" Value="Black"/>
                    </Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="23" />
                        <Setter Property="FontFamily" Value="Arial"/>
                        <Setter Property="FontWeight" Value="Normal" />
                        <Setter Property="Foreground" Value="White"/>

                    </Style>
                </Grid.Resources>
                <Border CornerRadius=" 10 ">
                    <Border.Background>
                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                            <GradientStop Color="#879ec0" Offset="0"/>
                            <GradientStop Color="White" Offset="1"/>
                        </LinearGradientBrush>
                    </Border.Background>
                </Border>
                <Label Grid.Column="0" FontWeight="Bold" Foreground="White" FontSize="30"  Margin="0,0,10,0" >
                    <Label.Effect>
                        <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.3"/>
                    </Label.Effect> PLC Setting
                </Label>
                <Button Grid.Column="1" x:Name="BtnSave">
                    <StackPanel Orientation="Horizontal">
                      
                        <TextBlock VerticalAlignment="Center" Padding="15,0,0,0">Save</TextBlock>
                    </StackPanel>
                </Button>

            </Grid>
            <Grid Grid.Row="1" Background="#DDDDDD">
                <Grid.Resources>
                    <Style TargetType="{x:Type Label}">
                        <Setter Property="Foreground" Value="#dd222222" />
                        <Setter Property="Padding" Value="5,0" />
                        <Setter Property="VerticalContentAlignment" Value="Center" />
                        <Setter Property="HorizontalContentAlignment" Value="Center" />
                        <Setter Property="FontSize" Value="24" />
                    </Style>

                    <Style TargetType="Button" BasedOn="{StaticResource sButton}">
                        <Setter Property="FontSize" Value="24" />
                        <Setter Property="FontWeight" Value="Bold" />
                        <Setter Property="Margin" Value="0,5,5,5" />
                        <Setter Property="Background" Value="#ECECEC" />
                        <Setter Property="BorderThickness" Value="0.7"/>
                        <Setter Property="BorderBrush" Value="Black"/>

                    </Style>
                    <Style TargetType="{x:Type TextBlock}">
                        <Setter Property="VerticalAlignment" Value="Center"/>
                        <Setter Property="FontSize" Value="18" />
                        <Setter Property="FontFamily" Value="Arial"/>
                        <Setter Property="FontWeight" Value="Light" />
                        <Setter Property="Foreground" Value="Black"/>

                    </Style>
                </Grid.Resources>
             
                <Grid Grid.Row="1">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"></ColumnDefinition>
                        <ColumnDefinition Width="600"></ColumnDefinition>
                        <ColumnDefinition Width="10"></ColumnDefinition>
                    </Grid.ColumnDefinitions>
                    <Grid Grid.Column="0">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="40"></RowDefinition>
                            <RowDefinition Height="3*"></RowDefinition>
                            <RowDefinition Height="3*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Label FontSize="25" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontWeight="Bold" Foreground="Black" Content="Logs" Background="White">
                        </Label>
                        <Grid Grid.Row="1">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*" />
                                <RowDefinition Height="40" />
                            </Grid.RowDefinitions>
                            <TextBox Grid.Row="0" x:Name="txtLogs" Text="{Binding rxLog}" Background="Black" Foreground="White"
           VerticalScrollBarVisibility="Visible"></TextBox>
                            <Button Grid.Row="1" Name="btnLogClear" Margin="2,2,10,2" Foreground="Black" FontFamily="Arial" FontWeight="Light"  Content="Clear">
                            </Button>
                        </Grid>
                    </Grid>
                    <Grid Grid.Column="1">
                        <Grid.RowDefinitions>
                            <RowDefinition Height="1.1*"></RowDefinition>
                            <RowDefinition Height="1.2*"></RowDefinition>
                            <RowDefinition Height="2*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Grid Grid.Row="0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="0"></ColumnDefinition>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <!--<Image  Grid.Column="0" Source="/Folder/PageUI/Icon/plc.png" Margin="8"></Image>-->
                            <Grid Grid.Column="1">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Label Margin="2" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="CadetBlue" FontSize="20" Foreground="White">Config</Label>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid Grid.Row="0">
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition ></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition Height="20"></RowDefinition>
                                        </Grid.RowDefinitions>

                                        <Button x:Name="btnOpen" Grid.Column="0" Grid.Row="0" Margin="50,2,50,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">

                                            <StackPanel Orientation="Horizontal">
                                                
                                                <TextBlock   VerticalAlignment="Center" Padding="3,0,0,0">Open</TextBlock>
                                            </StackPanel>
                                        </Button>
                                        <Button x:Name="btnClose" Grid.Column="1" Grid.Row="0" Margin="50,2,50,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">

                                            <StackPanel Orientation="Horizontal">
                                                
                                                <TextBlock  VerticalAlignment="Center" Padding="2,0,0,0">Close</TextBlock>
                                            </StackPanel>
                                        </Button>
                                    </Grid>
                                    <Grid Grid.Row="1">
                                        <Grid.RowDefinitions>
                                            <RowDefinition></RowDefinition>
                                            <RowDefinition></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <Grid Margin="1" Grid.Row="0" Grid.Column="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Label>IP</Label>
                                            <TextBox Grid.Column="1" x:Name="txbIp" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="25"></TextBox>
                                        </Grid>
                                        <Grid  Grid.Row="1" Grid.Column="0">
                                            <Grid.ColumnDefinitions>
                                                <ColumnDefinition Width="50"></ColumnDefinition>
                                                <ColumnDefinition></ColumnDefinition>
                                            </Grid.ColumnDefinitions>
                                            <Label>Port</Label>
                                            <TextBox Grid.Column="1" x:Name="txbPort"  HorizontalContentAlignment="Center" VerticalContentAlignment="Center" FontSize="25"></TextBox>
                                        </Grid>
                                    </Grid>
                                </Grid>
                            </Grid>
                        </Grid>
                        <Grid Grid.Row="1">
                            <Grid Grid.Column="2">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="40"></RowDefinition>
                                    <RowDefinition Height="*"></RowDefinition>
                                </Grid.RowDefinitions>
                                <Grid Grid.Row="0">
                                    <Label Margin="2" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Background="CadetBlue" FontSize="20" Foreground="White">Funtion</Label>
                                </Grid>
                                <Grid Grid.Row="1">
                                    <Grid.RowDefinitions>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                        <RowDefinition></RowDefinition>
                                    </Grid.RowDefinitions>
                                    <Grid.ColumnDefinitions>
                                        <ColumnDefinition></ColumnDefinition>
                                        <ColumnDefinition></ColumnDefinition>
                                    </Grid.ColumnDefinitions>
                                    <Button x:Name="btnReadBit" Grid.Column="0" Grid.Row="0" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock  VerticalAlignment="Center" Padding="2,0,0,0">Read Bit</TextBlock>
                                        </StackPanel>
                                    </Button>
                                    <TextBox x:Name="txtAddressReadBit" FontSize="16" FontWeight="Bold" Margin="2" Background="White" Grid.Column="1" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">0</TextBox>
                                    <Button x:Name="btnWriteBit" Grid.Column="0" Grid.Row="1" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock  VerticalAlignment="Center" Padding="2,0,0,0">Write Bit</TextBlock>
                                        </StackPanel>
                                    </Button>
                                    <ComboBox x:Name="cboValueWriteBit" FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Grid.Column="1" Grid.Row="1" Margin="2">
                                        <ComboBoxItem FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">false</ComboBoxItem>
                                        <ComboBoxItem FontSize="16" FontWeight="Bold" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">true</ComboBoxItem>
                                    </ComboBox>
                                    <Button x:Name="btnReadWord" Grid.Column="0" Grid.Row="2" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock  VerticalAlignment="Center" Padding="2,0,0,0">Read Word</TextBlock>
                                        </StackPanel>
                                    </Button>
                                    <TextBox x:Name="txtAddressReadWord" FontSize="16" FontWeight="Bold" Margin="2" Background="White" Grid.Column="1" Grid.Row="2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center">0</TextBox>
                                    <Button x:Name="btnWriteWord" Grid.Column="0" Grid.Row="3" Margin="2,2,2,2" HorizontalContentAlignment="Center" VerticalContentAlignment="Center" Foreground="White" FontSize="16">

                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock  VerticalAlignment="Center" Padding="2,0,0,0">Write Word</TextBlock>
                                        </StackPanel>
                                    </Button>
                                    <TextBox x:Name="txtValueWriteWord" FontSize="16" FontWeight="Bold" Margin="2" Background="White" Grid.Column="1" Grid.Row="3" HorizontalContentAlignment="Center" VerticalContentAlignment="Center"></TextBox>
                                </Grid>
                            </Grid>

                        </Grid>
                    </Grid>
                </Grid>
            </Grid>
        </Grid>


    </Grid>
</Page>
