<Page x:Class="VisionInspection.PgPlc"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:VisionInspection"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="1200"
      Title="PgPlc">

    <Grid>
        <Grid Background="#CCCCCC">
            <Grid.RowDefinitions>
                <RowDefinition Height="0.8*"></RowDefinition>
                <RowDefinition Height="5*"></RowDefinition>
            </Grid.RowDefinitions>
            <Grid Grid.Row="0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="2*"></ColumnDefinition>
                    <ColumnDefinition Width="0*"></ColumnDefinition>
                    <ColumnDefinition Width="1*"></ColumnDefinition>
                    <ColumnDefinition Width="0.7*"></ColumnDefinition>
                    <ColumnDefinition Width="0.7*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Border Margin="30,15,15,10" BorderBrush="Black" Background="#EEEEEE" BorderThickness="1" CornerRadius="8,8,8,8" Grid.Column="2">
                    <Grid Grid.Column="2" >
                        <Grid.RowDefinitions>
                            <RowDefinition Height="2*"></RowDefinition>
                            <RowDefinition Height="4*"></RowDefinition>
                        </Grid.RowDefinitions>
                        <Border Margin="15,0,0,5" Background="Wheat" Name="borSuper" HorizontalAlignment="Left" BorderBrush="Silver" BorderThickness="1" CornerRadius="0,0,8,8" Grid.Row="0" >
                            <Label Grid.Row="0" HorizontalContentAlignment="Left" VerticalContentAlignment="Center" Foreground="Black" Content="  ACCOUNT  " FontSize="10"></Label>
                        </Border>
                        <Grid Grid.Row="2">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="1*"></ColumnDefinition>
                                <ColumnDefinition Width="3*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <Grid.RowDefinitions>
                                <RowDefinition></RowDefinition>
                                <RowDefinition></RowDefinition>
                            </Grid.RowDefinitions>
                            <Label Foreground="#555555" Margin="0,0,0,2" Grid.Row="0" Grid.Column="0" VerticalContentAlignment="Center" Background="Transparent" FontSize="15" FontFamily="Times New Roman">ID</Label>
                            <Label Foreground="#555555" Margin="0,0,0,2" Grid.Row="2" Grid.Column="0" VerticalContentAlignment="Center" Background="Transparent" FontSize="15" FontFamily="Times New Roman">Time</Label>
                            <TextBox Margin="0,1,6,0" Grid.Row="0" Grid.Column="1" FontSize="15" VerticalAlignment="Top" Name="txtAccountID" BorderThickness="0"></TextBox>
                            <TextBox Margin="0,0,6,2" Grid.Row="2" Grid.Column="1" FontSize="15" VerticalAlignment="Center" Name="txtAccountTime" BorderThickness="0"></TextBox>
                        </Grid>

                    </Grid>
                </Border>
                <Border Margin="15,15,15,10" Grid.Column="3">
                    <Button x:Name="btLogin" Background="#6787c0"  Style="{StaticResource sButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Images/menu-login.png" Height="50"/>
                            <TextBlock FontWeight="Bold" FontSize="18" Foreground="White" HorizontalAlignment="Center">Log In</TextBlock>
                        </StackPanel>
                    </Button>
                </Border>
                <Border Margin="15,15,15,10" Grid.Column="4">
                    <Button x:Name="btLogout" Background="#6787c0" Style="{StaticResource sButton}">
                        <StackPanel Orientation="Horizontal">
                            <Image Source="Images/menu-logout.png" Height="50"/>
                            <TextBlock FontWeight="Bold" FontSize="18" Foreground="White" HorizontalAlignment="Center">Log Out</TextBlock>
                        </StackPanel>
                    </Button>
                </Border>
            </Grid>

            <Grid Grid.Row="1">
                <Border CornerRadius=" 10 " Background="#EEEEEE">

                    <Grid>
                        <Canvas>
                            <TextBlock Text="Design by Hiiep" Foreground="#00868B" Canvas.Right="10" Canvas.Bottom="10"/>

                        </Canvas>


                    </Grid>
                </Border>


                <UniformGrid Columns="0" Rows="4" Margin="100,0,100,0" Height="480">
                    <UniformGrid.Resources>
                        <Style TargetType="{x:Type Button}" BasedOn="{StaticResource sButton}">
                            <Setter Property="Foreground" Value="#dd222222" />
                            <Setter Property="Background" Value="#dddddd" />
                            <Setter Property="BorderThickness" Value="0" />
                            <Setter Property="FontSize" Value="30" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Margin" Value="14" />
                            <Setter Property="HorizontalContentAlignment" Value="Stretch"/>
                            <Setter Property="VerticalContentAlignment" Value="Center"/>
                            <Setter Property="Background" Value="#6787c0"/>
                        </Style>
                        <Style TargetType="{x:Type TextBlock}">
                            <Setter Property="FontSize" Value="25" />
                            <Setter Property="FontWeight" Value="Bold" />
                            <Setter Property="Foreground" Value="White"/>

                        </Style>
                    </UniformGrid.Resources>

                    <Button x:Name="btTeaching" >
                        <Button.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.6" BlurRadius="20"/>
                        </Button.Effect>
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="40,0,0,0" Source="Images/menu-grid.png">
                                <Image.Effect>
                                    <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                                </Image.Effect>
                            </Image>
                            <TextBlock VerticalAlignment="Center" Padding="20,0,0,0">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="5" Color="Black" Opacity="0.2" Direction="315"/>
                                </TextBlock.Effect>Teaching Menu</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btMechanical">
                        <Button.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.6" BlurRadius="20"/>
                        </Button.Effect>
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="40,0,0,0" Source="Images/menu-mechanic.png">
                                <Image.Effect>
                                    <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                                </Image.Effect>
                            </Image>
                            <TextBlock VerticalAlignment="Center" Padding="20,0,0,0">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                                </TextBlock.Effect>Mechanical Menu</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btSystem">
                        <Button.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.6" BlurRadius="20"/>
                        </Button.Effect>
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="40,0,0,0" Source="Images/menu-system.png">
                                <Image.Effect>
                                    <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                                </Image.Effect>
                            </Image>
                            <TextBlock VerticalAlignment="Center" Padding="20,0,0,0">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                                </TextBlock.Effect>System Menu</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btManual">
                        <Button.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.6" BlurRadius="20"/>
                        </Button.Effect>
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="40,0,0,0" Source="Images/menu-manual.png">
                                <Image.Effect>
                                    <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                                </Image.Effect>
                            </Image>
                            <TextBlock VerticalAlignment="Center" Padding="20,0,0,0">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                                </TextBlock.Effect>Manual Operation</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btStatus">
                        <Button.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.6" BlurRadius="20"/>
                        </Button.Effect>
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="40,0,0,0" Source="Images/Status.png">
                                <Image.Effect>
                                    <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                                </Image.Effect>
                            </Image>
                            <TextBlock VerticalAlignment="Center" Padding="20,0,0,0">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                                </TextBlock.Effect>Status Menu</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btModel">
                        <Button.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.6" BlurRadius="20"/>
                        </Button.Effect>
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="40,5,5,5" Source="Images/save.png">
                                <Image.Effect>
                                    <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                                </Image.Effect>
                            </Image>
                            <TextBlock VerticalAlignment="Center" Padding="20,0,0,0">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                                </TextBlock.Effect>Model</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btSuperUser">
                        <Button.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.6" BlurRadius="20"/>
                        </Button.Effect>
                        <StackPanel Orientation="Horizontal">
                            <Image Margin="40,0,0,0" Source="Images/menu-admin.png">
                                <Image.Effect>
                                    <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                                </Image.Effect>
                            </Image>
                            <TextBlock VerticalAlignment="Center" Padding="20,0,0,0">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                                </TextBlock.Effect>Super User Menu</TextBlock>
                        </StackPanel>
                    </Button>
                    <Button x:Name="btCameraSetting">
                        <Button.Effect>
                            <DropShadowEffect Color="Black" Direction="320" ShadowDepth="5" Opacity="0.6" BlurRadius="20"/>
                        </Button.Effect>

                        <StackPanel Orientation="Horizontal">
                            <Image Margin="40,0,0,0" Source="Images/picture.png">
                                <Image.Effect>
                                    <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                                </Image.Effect>
                            </Image>
                            <TextBlock VerticalAlignment="Center" Padding="20,0,0,0">
                                <TextBlock.Effect>
                                    <DropShadowEffect ShadowDepth="7" Color="Black" Opacity="0.2" Direction="315"/>
                                </TextBlock.Effect>Camera Setting</TextBlock>
                        </StackPanel>
                    </Button>

                </UniformGrid>

            </Grid>
        </Grid>

    </Grid>
</Page>
